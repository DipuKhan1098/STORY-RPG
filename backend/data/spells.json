[
  //////////////////////////////////////////////////////////////////////////////
  // spells.json
  // PURPOSE:
  // - Magical actions scaling on INT.
  // FIELDS:
  // - type: 'damage' | 'heal' | 'summon' | 'buff' | 'debuff' | 'mixed'
  // - targeting: 'single' | 'aoe' | 'self'
  // - scaling: { base, intMultiplier }         // raw = base + INT * intMultiplier
  // - elements: [{ key, fixed?, mult? }]       // fixed adds, mult is +% (0.20 = +20%)
  // - dot: { ticks, amountPerTick?, usesScaling? }  // DoT payload
  // - summon: { monsterId, durationTurns?, replacesExisting? }
  // - cost: { mp?, hp?, itemId? }
  // - cooldown: number (turns)
  // - requirements: stats/elements/classIds/raceIds/level
  //////////////////////////////////////////////////////////////////////////////

  {
    "id": "spl_fire_lance",
